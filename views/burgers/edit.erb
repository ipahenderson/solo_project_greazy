<form class="new-edit-form" action="/burgers/<%= @burger.id %>" method="post">
  <input type="hidden" name="_method" value="put"/>
    <div class="field-group">
      <label for="burger-name-field" class="label">Burger Name:</label>
      <div class="field">
        <input
        class="select"
        type="text"
        name="name"
        id="burger-name-field"
        placeholder="Burger name"
        value="<%= @burger.name %>"
        required/>
      </div>
    </div>

  <div class="field-group">
  <label class="label">
  Burger Type:
    </label>
    <div class="field">
  <select class="select" name="type">
    <% for type in @types%>
    <option value="<%=type%>" <%= "selected" if type == @burger.type%>><%= type.to_s.capitalize %></option>
    <% end %>
  </select>
    </div>
  </div>

    <div class="field-group">
      <label for="price-field" class="label">Price:</label>
      <div class="field">
        <input
        class="select"
        type="text"
        name="price"
        id="price-field"
        placeholder="Price(i.e 7.60)"
        value="<%= @burger.pretty_price %>"
        required/>
      </div>
    </div>


      <div class="field-group">
        <label for="logo-field" class="label">Image URL:</label>
        <div class="field">
          <input
          class="select"
          type="text"
          name="logo"
          id="logo-field"
          placeholder="Insert an image URL"
          value="<%= @burger.logo %>"
          required/>
        </div>
      </div>


  <p>
    <input class="new-deal-button" type='submit' value="Update Burger">
  </p>
</form>
