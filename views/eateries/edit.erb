<form class="new-edit-form" action="/eateries/<%= @eatery.id %>" method="post">
      <input type="hidden" name="_method" value="put"/>
  <p>
      <label for="eatery-name-field" class="label">Eatery Name:</label>
        <input
        class="select"
        type="text"
        name="name"
        id="eatery-name-field"
        placeholder="Eatery name"
        value="<%= @eatery.name %>"
        required/>
  </p>


  <p>
      <label for="contact-field" class="label">Contact:</label>
        <input
        class="select"
        type="text"
        name="contact"
        id="contact-field"
        placeholder="123 Fake St."
        value="<%= @eatery.contact %>"
        required/>
    </p>


    <p>
        <label for="logo-field" class="label">Image URL:</label>
          <input
          class="select"
          type="text"
          name="logo"
          id="logo-field"
          placeholder="Insert an image URL"
          value="<%= @eatery.logo %>"
          required/>
      </p>


  <p>
    <input class="new-deal-button" type='submit' value="Update Eatery">
  </p>
</form>
